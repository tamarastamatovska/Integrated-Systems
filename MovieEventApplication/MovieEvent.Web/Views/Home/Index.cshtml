@{
    ViewData["Title"] = "Home Page";
}
<style>
    /* Отстрани ги стандардните маргини и padding */
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-x: hidden; /* за да не се појави хоризонтален скрол */
    }

    .bg-image {
        background-image: url('/images/movieBg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        width: 100vw; /* ширина 100% од прозорецот */
        position: absolute; /* позиционирај апсолутно */
        top: 0;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
    }

    /* Ако имаш navbar или header, може да треба да го подесиш z-index */
    .navbar {
        position: relative;
        z-index: 10;
    }
</style>

