@model MovieEvent.Domain.DomainModels.MovieRating

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
        color: white;
    }

    .card {
        background-color: #1e1e2f;
        border: 1px solid #dc3545; 
        max-width: 600px;
        margin: 2rem auto;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(220, 53, 69, 0.5);
    }

    dt {
        color: #0dcaf0;
        font-weight: 600;
        width: 30%;
    }

    dd {
        margin-left: 0;
        color: #e0e0e0;
        width: 70%;
    }

    dl.row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem 0;
    }

    .row > dt, .row > dd {
        padding: 0.25rem 0.5rem;
    }

    h3 {
        text-align: center;
        color: #ff6b6b;
        margin-bottom: 1.5rem;
    }

    form {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
        box-shadow: 0 0 8px rgba(220, 53, 69, 0.7);
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #b02a37;
            box-shadow: 0 0 12px rgba(176, 42, 55, 0.9);
        }

    a {
        align-self: center;
        color: #0dcaf0;
        text-decoration: none;
        font-weight: 600;
        padding: 0.5rem 1rem;
        border: 1px solid #0dcaf0;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        a:hover {
            background-color: #0dcaf0;
            color: #1e1e2f;
            text-decoration: none;
        }
</style>

<h1 style="text-align:center;" class="text-danger">Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="card">
    <h4>MovieRating</h4>
    <hr />
    <dl class="row">
        <dt>@Html.DisplayNameFor(model => model.Movie)</dt>
        <dd>@Html.DisplayFor(model => model.Movie.Title)</dd>

        <dt>@Html.DisplayNameFor(model => model.Rating)</dt>
        <dd>@Html.DisplayFor(model => model.Rating)</dd>

        <dt>@Html.DisplayNameFor(model => model.Comment)</dt>
        <dd>@Html.DisplayFor(model => model.Comment)</dd>

        <dt>@Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd>@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
