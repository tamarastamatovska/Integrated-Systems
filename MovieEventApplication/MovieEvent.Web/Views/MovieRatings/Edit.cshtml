@model MovieEvent.Domain.DomainModels.MovieRating

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <style>
        body {
            background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
            background-attachment: fixed;
            color: white;
        }

        label {
            color: #0dcaf0;
            font-weight: 500;
        }

        input.form-control,
        select.form-control {
            background-color: #2c2f4a;
            border: 1px solid #00bcd4;
            color: white;
        }

            input.form-control:focus,
            select.form-control:focus {
                box-shadow: 0 0 5px #0dcaf0;
            }

        .form-group {
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: #0dcaf0;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0bb8de;
            }

        .card {
            background-color: #1e1e2f;
            border: 1px solid #00bcd4;
        }

        .text-danger {
            color: #ff6b6b !important;
        }

        a {
            color: #0dcaf0;
        }
    </style>


<h1 class="text-info">Edit</h1>
<h4 class="text-light">MovieRating</h4>
<hr />

<div class="container py-4">
    <div class="card shadow-lg text-light">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Movie</label>
                    <input class="form-control" value="@ViewBag.MovieTitle" style="color: black;" readonly />
                    <input type="hidden" asp-for="MovieId" />
                </div>


                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreatedAt" class="control-label"></label>
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group mt-4 d-flex justify-content-between">
                    <input type="submit" value="💾 Save" class="btn btn-primary shadow" />
                    <a asp-action="Index" class="btn btn-outline-info">⬅ Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
