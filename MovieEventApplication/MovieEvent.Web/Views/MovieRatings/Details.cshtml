@model MovieEvent.Domain.DomainModels.MovieRating

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
        color: white;
    }

    .card {
        background-color: #1e1e2f;
        border: 1px solid #00bcd4;
        max-width: 600px;
        margin: 2rem auto;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(13, 202, 240, 0.5);
    }

    dt {
        color: #0dcaf0;
        font-weight: 600;
        width: 30%;
    }

    dd {
        margin-left: 0;
        color: #e0e0e0;
        width: 70%;
    }

    dl.row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem 0;
    }

    .row > dt, .row > dd {
        padding: 0.25rem 0.5rem;
    }

    a {
        color: #0dcaf0;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .actions {
        margin-top: 1.5rem;
        display: flex;
        justify-content: space-between;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<h1 class="text-info" style="text-align:center;">Details</h1>

<div class="card">
    <h4>Movie Rating</h4>
    <hr />
    <dl class="row">
        <dt>@Html.DisplayNameFor(model => model.Movie)</dt>
        <dd>@Html.DisplayFor(model => model.Movie.Title)</dd>

        <dt>@Html.DisplayNameFor(model => model.Rating)</dt>
        <dd>@Html.DisplayFor(model => model.Rating)</dd>

        <dt>@Html.DisplayNameFor(model => model.Comment)</dt>
        <dd>@Html.DisplayFor(model => model.Comment)</dd>

        <dt>@Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd>@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>
</div>

<div class="actions">
    <a asp-action="Edit" asp-route-id="@Model?.Id">✏️ Edit</a>
    <a asp-action="Index">⬅ Back to List</a>
</div>
