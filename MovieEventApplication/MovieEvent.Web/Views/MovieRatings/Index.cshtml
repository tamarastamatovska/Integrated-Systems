@model IEnumerable<MovieEvent.Domain.DomainModels.MovieRating>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
    }

    th, td {
        vertical-align: middle;
    }

    .table thead th {
        color: #00bcd4;
        border-bottom: 2px solid #00bcd4;
    }

    .table tbody tr {
        border-color: #444;
    }

    .table td, .table th {
        color: #f8f9fa;
    }
</style>

<div class="container py-4">
    <div class="card bg-dark text-light shadow-lg border-info border-2">
        <div class="card-header text-info fw-bold fs-4">
            🎞️ Movie Ratings
        </div>

        <div class="card-body">
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-outline-info shadow-sm">➕ Add New Rating</a>
            </div>

            <table class="table table-dark table-hover table-bordered shadow-sm">
                <thead>
                    <tr>
                        <th>Movie Title</th>
                        <th>Rating</th>
                        <th>Comment</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Movie?.Title</td>
                            <td>@item.Rating</td>
                            <td>@item.Comment</td>
                            <td>@item.CreatedAt.ToString("g")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light me-1">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
