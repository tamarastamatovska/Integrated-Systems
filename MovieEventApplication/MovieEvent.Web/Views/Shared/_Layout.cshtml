<!DOCTYPE html> 
<html lang="en"> 
<head>
   <meta charset="utf-8" /> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
    <title>@ViewData["Title"] - MovieEvent.Web</title> 
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
     <link rel="stylesheet" href="~/MovieEvent.Web.styles.css" asp-append-version="true" /> 
 </head> 
 <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-info" asp-controller="Movies" asp-action="Index">
                    🎬 Movie Hub
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movies" asp-action="Index">All Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Reservations" asp-action="MyReservations">My Reservations</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item me-2">
                                <span class="nav-link text-light">👤 @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form method="post"
                                      asp-area="Identity"
                                      asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm shadow-sm">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>

                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>

                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   <div class="container"> 
     <main role="main" class="pb-3"> 
            @RenderBody() 
    </div> 

    <footer class="border-top footer text-muted"> 
        <div class="container text-center color:black"> 
            &copy; 2025 - Movie Hub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
       </div> 
     </footer> 
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script> 
    @await RenderSectionAsync("Scripts", required: false) 
 </body> 
</html>


