@model MovieEvent.Domain.DomainModels.MovieRating

<h2>Rate Movie</h2>

<form asp-action="Rate" method="post">
    <input type="hidden" asp-for="MovieId" />

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="10" required />
    </div>

    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
</form>

