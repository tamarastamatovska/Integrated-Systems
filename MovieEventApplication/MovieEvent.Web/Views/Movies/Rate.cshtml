@model MovieEvent.Domain.DomainModels.MovieRating

<style>
    body {
        background-color: #1e1e2f;
        color: #ffffff;
    }

    h2 {
        color: #00bcd4;
    }

    .form-control {
        background-color: #2c2c3c;
        color: #ffffff;
        border: 1px solid #555;
    }

        .form-control:focus {
            background-color: #2c2c3c;
            color: #ffffff;
            border-color: #00bcd4;
            box-shadow: 0 0 5px #00bcd4;
        }

    label {
        color: #ccc;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .form-group {
        margin-bottom: 1rem;
    }

    form {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #2c2c3c;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }
</style>

<h2 class="text-center">Rate Movie</h2>

<form asp-action="Rate" method="post">
    <input type="hidden" asp-for="MovieId" />

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="10" required />
    </div>

    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>
