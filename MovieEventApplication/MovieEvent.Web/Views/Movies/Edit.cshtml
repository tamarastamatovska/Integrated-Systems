@model MovieEvent.Domain.DomainModels.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
    }
</style>

<div class="container py-4">
    <div class="card bg-dark text-light shadow-lg border-info border-2">
        <div class="card-header text-info fw-bold fs-4">
            🎬 Edit Movie
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control bg-dark text-light border-info" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PosterUrl" class="form-label">Poster URL</label>
                    <input asp-for="PosterUrl" class="form-control bg-dark text-light border-info" />
                    <span asp-validation-for="PosterUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RANK" class="form-label">Rating</label>
                    <input asp-for="RANK" class="form-control bg-dark text-light border-info" />
                    <span asp-validation-for="RANK" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Year" class="form-label">Year</label>
                    <input asp-for="Year" class="form-control bg-dark text-light border-info" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                @* <div class="mb-4"> *@
                @*     <label asp-for="RANKCategory" class="form-label">Category</label> *@
                @*     <select asp-for="RANKCategory" class="form-control bg-dark text-light border-info"></select> *@
                @*     <span asp-validation-for="RANKCategory" class="text-danger"></span> *@
                @* </div> *@
                <div class="mb-4">
                    <label asp-for="RANKCategory" class="form-label">Category</label>
                    <select asp-for="RANKCategory" class="form-control bg-dark text-light border-info"
                            asp-items="ViewBag.RANKCategoryList">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="RANKCategory" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Actors" class="form-label">Actors</label>
                    <input asp-for="Actors" class="form-control bg-dark text-light border-info" />
                    <span asp-validation-for="Actors" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">⬅ Back to List</a>
                    <input type="submit" value="💾 Save" class="btn btn-info shadow" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
