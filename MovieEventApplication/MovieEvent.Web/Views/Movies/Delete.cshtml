@model MovieEvent.Domain.DomainModels.Movie 

 @{ 
     ViewData["Title"] = "Delete"; 
    Layout = "~/Views/Shared/_Layout.cshtml"; 
 } 

 <style> 
    body { 
         background: linear-gradient(135deg, #1e1e2f, #2c2c3c); 
         background-attachment: fixed; 
     } 
 </style> 

<div class="container py-4"> 
    <div class="card bg-dark text-light shadow-lg border-danger border-2"> 
         <div class="card-header p-0"> 
           <img src="@Model.PosterUrl" 
                 alt="Poster" 
                 class="img-fluid rounded-top border-bottom border-danger"
                style="max-height: 400px; object-fit: cover; width: 100%;" /> 
       </div> 

       <div class="card-body"> 
             <h4 class="text-danger mb-4 fw-semibold"> Are you sure you want to delete this movie?</h4> 

           <dl class="row"> 
                <dt class="col-sm-3"> Title</dt> 
                 <dd class="col-sm-9">@Model.Title</dd> 

               <dt class="col-sm-3"> RANK</dt> 
                 <dd class="col-sm-9">@Model.RANK</dd> 

                 <dt class="col-sm-3"> Year</dt> 
                 <dd class="col-sm-9">@Model.Year</dd> 

                 <dt class="col-sm-3"> Category</dt> 
                 <dd class="col-sm-9">@Model.RANKCategory</dd> 
             </dl> 

          <form asp-action="Delete"> 
                 <input type="hidden" asp-for="Id" /> 
                 <div class="d-flex justify-content-between mt-4"> 
                     <a asp-action="Index" class="btn btn-outline-light"> 
                         ⬅ Back to List 
                     </a> 
                    <input type="submit" value="🗑️ Delete" class="btn btn-danger shadow" /> 
                 </div> 
             </form> 
         </div> 
     </div> 
 </div>


