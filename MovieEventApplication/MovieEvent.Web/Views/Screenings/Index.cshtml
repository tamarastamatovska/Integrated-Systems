@model IEnumerable<MovieEvent.Domain.DomainModels.Screening>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
        color: white;
    }

    a {
        color: #0dcaf0;
    }

    .table thead {
        background-color: #0dcaf0;
        color: #1e1e2f;
    }

    .table {
        background-color: #2c2c3c;
        color: white;
    }

        .table td, .table th {
            vertical-align: middle;
        }
</style>



<p>
    <a asp-action="Create" class="btn btn-outline-info">Create New</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movie)</th>
            <th>@Html.DisplayNameFor(model => model.AvailableSeats)</th>
            <th>@Html.DisplayNameFor(model => model.TicketPrice)</th>
            <th>@Html.DisplayNameFor(model => model.CinemaHall)</th>
            <th>@Html.DisplayNameFor(model => model.ScreeningDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Movie.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.AvailableSeats)</td>
                <td>@Html.DisplayFor(modelItem => item.TicketPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.CinemaHall)</td>
                <td>@Html.DisplayFor(modelItem => item.ScreeningDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
