@model MovieEvent.Domain.DomainModels.Screening

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
        color: white;
    }

    dt {
        color: #0dcaf0;
    }

    a, .btn-outline-secondary {
        color: #0dcaf0;
        border-color: #0dcaf0;
    }

        .btn-outline-secondary:hover {
            background-color: #0dcaf0;
            color: #1e1e2f;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            border-color: #b02a37;
        }
</style>

<h1 class="text-danger">Delete</h1>

<h3 class="text-warning">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-info">Screening</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Movie)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Movie.Title)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AvailableSeats)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.AvailableSeats)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TicketPrice)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TicketPrice)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
