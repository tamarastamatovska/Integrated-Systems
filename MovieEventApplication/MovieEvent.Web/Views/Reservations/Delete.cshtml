@model MovieEvent.Domain.DomainModels.Reservation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
        color: #212529; 
    }

    h1 {
        color: #0dcaf0; 
    }

    h3, h4 {
        color: #0dcaf0;
        font-weight: 600;
    }

    hr {
        border-color: #0dcaf0;
    }

    
    .content-text, dl.row dd {
        color: #121212; 
    }

    dl.row dt {
        color:black; 
        font-weight: 600;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #b02a37;
            border-color: #a52834;
            color: white;
        }

    a {
        color: #0dcaf0;
        text-decoration: none;
    }

        a:hover {
            color: #0a9ec9;
            text-decoration: underline;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="content-text">
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Screening)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Screening.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationCreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationCreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservedSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservedSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
