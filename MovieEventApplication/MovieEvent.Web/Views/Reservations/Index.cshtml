@model IEnumerable<MovieEvent.Domain.DomainModels.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c3c);
        background-attachment: fixed;
        color: #212529; /* темен текст */
    }

    table {
        width: 100%;
        background-color: #2c2c3c; /* темна позадина на табелата */
        color: #212529; /* темен текст */
        border-collapse: collapse;
    }

    thead tr {
        background-color: #1e1e2f; /* темен header */
        color: #0dcaf0; /* светло сина */
        border-bottom: 1px solid #0dcaf0;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #444;
    }

    a {
        color: #0dcaf0;
        text-decoration: none;
    }

        a:hover {
            color: #0a9ec9;
            text-decoration: underline;
        }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-info">Create New</a>
</p>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Screening)</th>
            <th>@Html.DisplayNameFor(model => model.User)</th>
            <th>@Html.DisplayNameFor(model => model.ReservationCreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.ReservedSeats)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Screening.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.User.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.ReservationCreatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ReservedSeats)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
